@model Emp
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Emp Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            EmpNo
        </dt>
        <dd class="col-sm-10">
            @Model.Empno
        </dd>
        <dt class="col-sm-2">
            EmpName
        </dt>
        <dd class="col-sm-10">
            @Model.Ename
        </dd>
        <dt class="col-sm-2">
            Job
        </dt>
        <dd class="col-sm-10">
            @Model.Job
        </dd>
        <dt class="col-sm-2">
            HireDate
        </dt>
        <dd class="col-sm-10">
            @Model.Hiredate
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Empno" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
        </form>   
</div>
