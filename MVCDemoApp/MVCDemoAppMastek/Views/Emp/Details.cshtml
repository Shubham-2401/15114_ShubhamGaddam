@model Emp
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Emp Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            EmpNo
        </dt>
        <dd class="col-sm-10">
            @Model.Empno
        </dd>
        <dt class="col-sm-2">
            EmpName
        </dt>
        <dd class="col-sm-10">
            @Model.Ename
        </dd>
        <dt class="col-sm-2">
            Job
        </dt>
        <dd class="col-sm-10">
            @Model.Job
        </dd>
        <dt class="col-sm-2">
            HireDate
        </dt>
        <dd class="col-sm-10">
            @Model.Hiredate
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Empno">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>